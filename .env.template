# Agentic Dev Flow (ADF) - Environment Configuration Template
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Anthropic API Key (Required)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# GitHub Personal Access Token (Optional)
# Only needed for local testing - GitHub Actions provides GITHUB_TOKEN automatically
# Create token at: https://github.com/settings/tokens
GITHUB_PAT=github_pat_1XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Claude CLI Configuration
# Path to Claude Code CLI executable (default: "claude" if in PATH)
CLAUDE_CODE_PATH=claude

# Maintain working directory for Claude Bash commands
CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR=true

# =============================================================================
# ADF CONFIGURATION
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
ADF_LOG_LEVEL=INFO

# Enable verbose logging (prints more detailed information)
ADF_ENABLE_VERBOSE=false

# Maximum execution time in minutes (prevents runaway processes)
ADF_MAX_EXECUTION_TIME=30

# =============================================================================
# DEBUGGING OPTIONS
# =============================================================================

# Save all agent prompts and outputs for debugging
# Warning: This can generate large files
ADF_DEBUG=false

# Dry run mode - plan but don't execute (future feature)
ADF_DRY_RUN=false
